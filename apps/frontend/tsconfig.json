{
  "include": [
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "es2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@ryot/generated/*": [
        "../../libs/generated/src/*"
      ],
      "@ryot/graphql/*": [
        "../../libs/graphql/src/*"
      ],
      "@ryot/ts-utils": [
        "../../libs/ts-utils/src/index.ts"
      ],
      "@ryot/ts-utils/*": [
        "../../libs/ts-utils/src/*"
      ],
      "~/*": [
        "./app/*"
      ]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "../../.moon/cache/types/apps/frontend",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "references": [
    {
      "path": "../../libs/generated"
    },
    {
      "path": "../../libs/graphql"
    },
    {
      "path": "../../libs/ts-utils"
    }
  ]
}
