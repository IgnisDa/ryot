{
	"extends": "./.wxt/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"outDir": "dist",
		"jsx": "react-jsx",
		"allowImportingTsExtensions": true,
		"paths": {
			"@ryot/graphql/*": ["../../libs/graphql/src/*"],
			"@ryot/ts-utils/*": ["../../libs/ts-utils/src/*"],
			"@ryot/generated/*": ["../../libs/generated/src/*"],
			"@ryot/ts-utils": ["../../libs/ts-utils/src/index.ts"]
		}
	},
	"references": [
		{
			"path": "../../libs/generated"
		},
		{
			"path": "../../libs/graphql"
		},
		{
			"path": "../../libs/ts-utils"
		}
	]
}
