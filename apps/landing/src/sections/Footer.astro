---
import Action from "@/components/Action.astro";
import Icon from "@/components/Icon.astro";
import type { FooterData, Icon as IconType } from "@/config/landing.interface";

interface Props {
  data: FooterData;
}

const { data } = Astro.props;
---

<footer
  class="flex flex-col justify-center text-center gap-y-8 pt-8 bg-black text-white w-full"
>
  <section>
    <Action as="a" type="text" class="text-xl md:text-2xl" href="/">
      {data.logo}
    </Action>
  </section>
  <section>
    <p class="px-2 md:text-lg">
      {data.description}
    </p>
  </section>
  <section
    class="flex flex-row flex-wrap justify-center gap-x-3 px-4 md:px-0 md:text-xl md:gap-x-5"
  >
    {
      data.links.map((link) => (
        <Action as="a" type="text" href={link.href}>
          {link.label}
        </Action>
      ))
    }
  </section>
  <section
    class="mb-5 flex flex-row flex-wrap justify-center gap-x-3 md:gap-x-10"
  >
    {
      data.socials.map((social) => (
        <Action as="a" type="icon" href={social.href} title={social.icon}>
          <Icon icon={social.icon as IconType} />
        </Action>
      ))
    }
  </section>
</footer>
