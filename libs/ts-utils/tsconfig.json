{
	"extends": "../../tsconfig.options.json",
	"compilerOptions": {
		"strict": true,
		"outDir": "dist",
		"module": "nodenext",
		"lib": ["ESNext", "DOM"],
		"preserveConstEnums": true,
		"verbatimModuleSyntax": false,
		"moduleResolution": "nodenext",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@ryot/generated/*": ["../generated/src/*"]
		}
	}
}
