{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "error"
			},
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noExplicitAny": "warn"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
