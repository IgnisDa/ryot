{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [
				"out/**",
				"dist/**",
				"build/**",
				"types-dist/**",
				".vitepress/dist/**"
			]
		},
		"build:types": {
			"outputs": ["types-dist/**"]
		},
		"build-chrome": {
			"dependsOn": ["^build"],
			"outputs": ["dist/chrome-mv3/**", "dist/*-chrome.zip"]
		},
		"build-firefox": {
			"dependsOn": ["^build"],
			"outputs": [
				"dist/firefox-mv2/**",
				"dist/*-sources.zip",
				"dist/*-firefox.zip"
			]
		},
		"typecheck": {
			"dependsOn": ["^build:types"]
		},
		"lint": {},
		"test": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test-watch": {
			"cache": false,
			"persistent": true
		},
		"backend-graphql": {
			"cache": false
		}
	}
}
