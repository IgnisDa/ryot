{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["build/**", ".vitepress/dist/**", "dist/**", "out/**"]
		},
		"build-chrome": {
			"dependsOn": ["^build"],
			"outputs": ["dist/chrome-mv3/**", "dist/*-chrome.zip"]
		},
		"build-firefox": {
			"dependsOn": ["^build"],
			"outputs": [
				"dist/firefox-mv2/**",
				"dist/*-sources.zip",
				"dist/*-firefox.zip"
			]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"lint": {},
		"test": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test-watch": {
			"cache": false,
			"persistent": true
		},
		"backend-graphql": {
			"cache": false
		}
	}
}
